- if !logged_in?
  .row
    .col-md-4.col-md-offset-4
      Welcome to the Glowfic Constellation. Admire the tiny, tiny words.
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Please Sign In
        .panel-body
          = form_tag login_path, {method: :post, role: "form"} do
            %fieldset
              .form-group
                = text_field_tag :username, params[:username], placeholder: "Username", class: 'form-control'
              .form-group
                = password_field_tag :password, params[:password], placeholder: "Password", class: 'form-control'
              .checkbox
                %label
                  = check_box_tag :remember_me
                  Remember Me
              = submit_tag "Log in", class: 'btn btn-lg btn-success btn-block'
              .btn-group{role: 'group', style: 'margin-top: 10px'}
                = link_to "Sign up", new_user_path, class: 'btn btn-lg btn-info'
                = link_to "Forgot Password?", new_password_reset_path, class: 'btn btn-lg btn-primary'